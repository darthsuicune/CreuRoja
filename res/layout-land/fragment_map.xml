<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:baselineAligned="false">

    <ScrollView
            android:id="@+id/marker_panel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:visibility="gone">

        <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <TableRow
                    android:gravity="center_vertical"
                    android:padding="8dp">

                <TextView
                        android:drawableLeft="@drawable/asamblea"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical"
                        android:text="@string/marker_type_asamblea"/>

                <CheckBox android:id="@+id/checkbox_asamblea"/>
            </TableRow>

            <TableRow
                    android:gravity="center_vertical"
                    android:padding="8dp">

                <TextView
                        android:drawableLeft="@drawable/bravo"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical"
                        android:text="@string/marker_type_bravo"/>

                <CheckBox android:id="@+id/checkbox_bravo"/>
            </TableRow>

            <TableRow
                    android:gravity="center_vertical"
                    android:padding="8dp">

                <TextView
                        android:drawableLeft="@drawable/cuap"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical"
                        android:text="@string/marker_type_cuap"/>

                <CheckBox android:id="@+id/checkbox_cuap"/>
            </TableRow>

            <TableRow
                    android:gravity="center_vertical"
                    android:padding="8dp">

                <TextView
                        android:drawableLeft="@drawable/hospital"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical"
                        android:text="@string/marker_type_hospital"/>

                <CheckBox android:id="@+id/checkbox_hospital"/>
            </TableRow>

            <TableRow
                    android:gravity="center_vertical"
                    android:padding="8dp">

                <TextView
                        android:drawableLeft="@drawable/mike"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical"
                        android:text="@string/marker_type_mike"/>

                <CheckBox android:id="@+id/checkbox_mike"/>
            </TableRow>
        </TableLayout>
    </ScrollView>

    <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            class="com.google.android.gms.maps.SupportMapFragment"/>

</LinearLayout>