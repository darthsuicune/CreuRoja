<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:id="@+id/location_card">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content">
        <TextView
                android:id="@+id/location_card_get_directions"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:drawableTop="@drawable/ic_action_directions"
                style="@android:color/transparent"
                android:text="@string/location_card_get_directions"/>
        <LinearLayout android:layout_width="0dp"
                      android:layout_weight="4"
                      android:layout_height="match_parent"
                      android:orientation="vertical"
                android:paddingLeft="8dp">
            <TextView
                    android:id="@+id/location_card_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@android:style/TextAppearance.Medium"/>
            <TextView
                    android:id="@+id/location_card_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/location_card_other"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autoLink="phone"/>

        </LinearLayout>

    </LinearLayout>
</ScrollView>