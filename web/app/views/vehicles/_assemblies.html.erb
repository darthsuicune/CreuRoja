<div id="vehicle_assemblies">
	<h3><%= t(:vehicle_assemblies) %></h3>
	<table>
		<thead>
			<tr>
				<th><%= t(:form_location_name) %></th>
				<th><%= t(:form_location_description) %></th>
				<th><%= t(:form_location_address) %></th>
				<th><%= t(:form_location_phone) %></th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			<% @vehicle.assemblies.each do |assembly| %>
				<tr>
					<td><%= assembly.name %></td>
					<td><%= assembly.description %></td>
					<td><%= assembly.address %></td>
					<td><%= assembly.phone %></td>
					<% if current_user.allowed_to?(:manage_vehicles) %>
						<% vehicle_assembly = VehicleAssembly.where(vehicle_id: @vehicle.id, location_id: assembly.id).first %>
						<td><%= link_to t(:resource_destroy), vehicle_assembly, method: :delete %></td>
					<% end %>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>